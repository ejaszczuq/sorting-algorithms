<Window x:Class="sorting_algorithms.SortedNumbersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sorted Numbers Window" Height="300" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Sorted Numbers:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <TextBox Name="tbSortedNumbers" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Stretch" Width="560" Height="150"/>
        </StackPanel>

        <TextBlock Name="tbAlgorithmInfo" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10" Width="200"/>
        <TextBlock Name="tbExecutionTime" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Width="180"/>

    </Grid>
</Window>
